@using Contest.Data.Models
@model Student

<div>
    <h1 class="display-4">Add new student...</h1>
    <div>
        <form asp-controller="Student" asp-action="Save" metnod="post">
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                <label for="formGroupExampleInput">ФИО</label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Введите ФИО..." asp-for="Name">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput">Номер группы</label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Введите номер группы..." asp-for="Group">
            </div>
            <br />
            <button class="btn btn-primary" type="submit">Send</button>
        </form>
    </div>
</div>
